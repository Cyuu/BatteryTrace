<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_gray_selector"
    android:padding="@dimen/margin_10">

    <TextView
        android:id="@+id/item_region_level"
        style="@style/tv_style_device"
        android:text="省"
        android:visibility="gone"
        android:textColor="@color/bg_green" />


    <TextView
        android:id="@+id/item_region_name"
        style="@style/tv_style_device"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@+id/item_region_level"
        android:text="保定" />


    <TextView
        android:id="@+id/item_region_id"
        style="@style/tv_style_device_desc"
        android:layout_below="@+id/item_region_name"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@+id/item_region_level"
        android:text="BD_12"
        android:textColor="@color/gray" />

</RelativeLayout>
