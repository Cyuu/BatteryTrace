<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/tv_style_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_12"
        android:text="请选择导航方式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_baidu"
            style="@style/tv_style_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/img_baidu"
            android:gravity="center"
            android:padding="@dimen/margin_12"
            android:text="百度(优)"
            android:textSize="@dimen/txt_14" />


        <TextView
            android:id="@+id/tv_gaode"
            style="@style/tv_style_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/img_gaode"
            android:gravity="center"
            android:padding="@dimen/margin_12"
            android:text="高德(优)"
            android:textSize="@dimen/txt_14" />

        <TextView
            android:id="@+id/tv_sdk"
            style="@style/tv_style_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/push"
            android:gravity="center"
            android:padding="@dimen/margin_12"
            android:text="集成(良)"
            android:textSize="@dimen/txt_14"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>