<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_5"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_loading_tip"
        android:layout_alignLeft="@+id/iv_loading_tip"
        android:layout_alignRight="@+id/iv_loading_tip"
        android:layout_alignTop="@+id/iv_loading_tip"
        android:layout_centerVertical="true"
        android:src="@drawable/circle_blue" />


    <ImageView
        android:id="@+id/iv_loading_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/fengshan" />
</RelativeLayout>
